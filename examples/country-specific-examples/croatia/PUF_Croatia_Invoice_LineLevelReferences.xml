<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Invoice xmlns:cac="urn:pagero:CommonAggregateComponents:1.0" xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2" xmlns:puf="urn:pagero:ExtensionComponent:1.0" xmlns:ext="urn:oasis:names:specification:ubl:schema:xsd:CommonExtensionComponents-2" xmlns="urn:pagero:PageroUniversalFormat:Invoice:1.0">

    <!-- Croatian Invoice with Line-Level References Example -->
    <!-- Demonstrates purchase order, despatch, and receipt references at line level -->
    <!-- Note: Line-level references are mutually exclusive with header-level references -->

    <cbc:CustomizationID>urn:pagero.com:puf:billing:2.0</cbc:CustomizationID>
    <cbc:ProfileID>urn:pagero.com:puf:billing:1.0</cbc:ProfileID>
    <!-- BT-1 Invoice Number -->
    <cbc:ID>HR-2025-LINE-REF-888</cbc:ID>
    <!-- BT-2 Invoice Issue Date  -->
    <cbc:IssueDate>2025-02-20</cbc:IssueDate>
    <!-- HR-BT-2 Issue time (mandatory in Croatia) -->
    <cbc:IssueTime>14:10:00</cbc:IssueTime>
    <!-- BT-9 Due Date -->
    <cbc:DueDate>2025-03-20</cbc:DueDate>
    <!-- BT-3 Invoice Type Code with Croatian process type P1 -->
    <cbc:InvoiceTypeCode name="P1">380</cbc:InvoiceTypeCode>
    <!-- BT-22 Invoice Note -->
    <cbc:Note>Faktura s referencama na razini stavke - različiti izvori za svaku stavku</cbc:Note>
    <!-- BT-5 Invoice Document Currency (Croatia uses EUR) -->
    <cbc:DocumentCurrencyCode>EUR</cbc:DocumentCurrencyCode>
    <!-- BT-10 Buyer reference -->
    <cbc:BuyerReference>LINE-REF-DEMO</cbc:BuyerReference>

    <!-- BG-4 Seller -->
    <cac:AccountingSupplierParty>
        <cac:Party>
            <!-- BT-34 Seller endpoint ID with Croatian OIB -->
            <cbc:EndpointID schemeID="9934">11223344556</cbc:EndpointID>
            <!-- BT-28 Seller Trading Name -->
            <cac:PartyName>
                <cbc:Name>Logistics Solutions Varaždin d.o.o.</cbc:Name>
            </cac:PartyName>
            <cac:PostalAddress>
                <!--BT-35 Seller address street-->
                <cbc:StreetName>Uska ulica 2</cbc:StreetName>
                <!-- BT-37 Seller address City -->
                <cbc:CityName>Varaždin</cbc:CityName>
                <!-- BT-38 Seller address postal code -->
                <cbc:PostalZone>42000</cbc:PostalZone>
                <cac:Country>
                    <!-- BT-40 Seller address country code -->
                    <cbc:IdentificationCode>HR</cbc:IdentificationCode>
                </cac:Country>
            </cac:PostalAddress>
            <cac:PartyTaxScheme>
                <!-- BT-31 Seller Vat Number with Croatian HR prefix -->
                <cbc:CompanyID>HR11223344556</cbc:CompanyID>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                </cac:TaxScheme>
            </cac:PartyTaxScheme>
            <cac:PartyLegalEntity>
                <!-- BT-27 Seller Registration Name -->
                <cbc:RegistrationName>Logistics Solutions Varaždin d.o.o.</cbc:RegistrationName>
                <!--BT-33 Company Legal Form-->
                <cbc:CompanyLegalForm>d.o.o. osnovana na Trgovačkom sudu u Varaždinu</cbc:CompanyLegalForm>
            </cac:PartyLegalEntity>
        </cac:Party>
        <!-- HR-BT-4 and HR-BT-5 Operator information (mandatory for Croatian fiscalization) -->
        <cac:SellerContact>
            <!-- HR-BT-5 Operator OIB -->
            <cbc:ID>66666666666</cbc:ID>
            <!-- HR-BT-4 Operator Name -->
            <cbc:Name>Ana Jurić</cbc:Name>
        </cac:SellerContact>
    </cac:AccountingSupplierParty>
    <!-- BG-7 Buyer -->
    <cac:AccountingCustomerParty>
        <cbc:SupplierAssignedAccountID>CRO-LOG-555</cbc:SupplierAssignedAccountID>
        <cac:Party>
            <!-- BT-49 Buyer endpoint ID with Croatian OIB -->
            <cbc:EndpointID schemeID="9934">22334455667</cbc:EndpointID>
            <!-- BT-45 Buyer Trading Name -->
            <cac:PartyName>
                <cbc:Name>Industri ja Sisak d.d.</cbc:Name>
            </cac:PartyName>
            <cac:PostalAddress>
                <!-- BT-50 Buyer address street-->
                <cbc:StreetName>Industrijska 50</cbc:StreetName>
                <!-- BT-52 Buyer address City -->
                <cbc:CityName>Sisak</cbc:CityName>
                <!-- BT-53 Buyer address postal code -->
                <cbc:PostalZone>44000</cbc:PostalZone>
                <cac:Country>
                    <!-- BT-55 Buyer address country code -->
                    <cbc:IdentificationCode>HR</cbc:IdentificationCode>
                </cac:Country>
            </cac:PostalAddress>
            <cac:PartyTaxScheme>
                <!-- BT-48 Buyer Vat Number if applicable -->
                <cbc:CompanyID>HR22334455667</cbc:CompanyID>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                </cac:TaxScheme>
            </cac:PartyTaxScheme>
            <cac:PartyLegalEntity>
                <!-- BT-44 Buyer Name -->
                <cbc:RegistrationName>Industrija Sisak d.d.</cbc:RegistrationName>
            </cac:PartyLegalEntity>
        </cac:Party>
    </cac:AccountingCustomerParty>
    <cac:PaymentMeans>
        <!-- BT-81 Payment means code -->
        <cbc:PaymentMeansCode>30</cbc:PaymentMeansCode>
        <!-- BT-83 Remittance information -->
        <cbc:PaymentID>HR-2025-LINE-REF-888</cbc:PaymentID>
        <cac:PayeeFinancialAccount>
            <!-- BT-84 Financial account identifier -->
            <cbc:ID>HR3323400001234567890</cbc:ID>
            <cac:FinancialInstitutionBranch>
                <!-- BT-86 Payment service provider identifier -->
                <cbc:ID>PBZGHR2X</cbc:ID>
            </cac:FinancialInstitutionBranch>
        </cac:PayeeFinancialAccount>
    </cac:PaymentMeans>
    <!-- BG-23 VAT breakdown -->
    <cac:TaxTotal>
        <!-- BT-110 Invoice total VAT amount -->
        <cbc:TaxAmount currencyID="EUR">187.50</cbc:TaxAmount>
        <cac:TaxSubtotal>
            <cbc:TaxableAmount currencyID="EUR">750.00</cbc:TaxableAmount>
            <cbc:TaxAmount currencyID="EUR">187.50</cbc:TaxAmount>
            <cac:TaxCategory>
                <cbc:ID>S</cbc:ID>
                <cbc:Percent>25.00</cbc:Percent>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                    <!-- HR-BT-12 Croatian tax category label -->
                    <cbc:Name>HR:PDV25</cbc:Name>
                </cac:TaxScheme>
            </cac:TaxCategory>
        </cac:TaxSubtotal>
    </cac:TaxTotal>
    <!-- BG-22 Document totals -->
    <cac:LegalMonetaryTotal>
        <!-- BT-106 Sum of all Invoice line net amounts -->
        <cbc:LineExtensionAmount currencyID="EUR">750.00</cbc:LineExtensionAmount>
        <!-- BT-109 Invoice total amount without VAT -->
        <cbc:TaxExclusiveAmount currencyID="EUR">750.00</cbc:TaxExclusiveAmount>
        <!-- BT-112 Invoice total amount with VAT -->
        <cbc:TaxInclusiveAmount currencyID="EUR">937.50</cbc:TaxInclusiveAmount>
        <!-- BT-115 Amount due for payment -->
        <cbc:PayableAmount currencyID="EUR">937.50</cbc:PayableAmount>
    </cac:LegalMonetaryTotal>

    <!-- BG-25 Invoice line with Purchase Order Reference -->
    <cac:InvoiceLine>
        <cbc:ID>1</cbc:ID>
        <cbc:InvoicedQuantity unitCode="EA">5</cbc:InvoicedQuantity>
        <cbc:LineExtensionAmount currencyID="EUR">250.00</cbc:LineExtensionAmount>
        <!-- Croatian line-level purchase order reference -->
        <cac:OrderLineReference>
            <!-- Line identifier in the purchase order -->
            <cbc:LineID>PO-LINE-001</cbc:LineID>
            <cac:OrderReference>
                <!-- Purchase order number -->
                <cbc:ID>PO-2025-MACH-001</cbc:ID>
            </cac:OrderReference>
        </cac:OrderLineReference>
        <cac:Item>
            <cbc:Name>Strojevi za pakiranje - naručeni prema narudžbenici</cbc:Name>
            <!-- Croatian item classification (mandatory) -->
            <cac:CommodityClassification>
                <cbc:ItemClassificationCode listID="CG">28.29.39</cbc:ItemClassificationCode>
            </cac:CommodityClassification>
            <cac:ClassifiedTaxCategory>
                <cbc:ID>S</cbc:ID>
                <cbc:Percent>25</cbc:Percent>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                    <cbc:Name>HR:PDV25</cbc:Name>
                </cac:TaxScheme>
            </cac:ClassifiedTaxCategory>
        </cac:Item>
        <cac:Price>
            <cbc:PriceAmount currencyID="EUR">50.00</cbc:PriceAmount>
        </cac:Price>
    </cac:InvoiceLine>

    <!-- BG-25 Invoice line with Despatch Advice Reference -->
    <cac:InvoiceLine>
        <cbc:ID>2</cbc:ID>
        <cbc:InvoicedQuantity unitCode="EA">10</cbc:InvoicedQuantity>
        <cbc:LineExtensionAmount currencyID="EUR">300.00</cbc:LineExtensionAmount>
        <!-- Croatian line-level despatch advice reference -->
        <cac:DespatchLineReference>
            <!-- Line identifier in the despatch advice -->
            <cbc:LineID>DN-LINE-005</cbc:LineID>
            <cac:DocumentReference>
                <!-- Despatch advice number -->
                <cbc:ID>DN-2025-SHIP-123</cbc:ID>
            </cac:DocumentReference>
        </cac:DespatchLineReference>
        <cac:Item>
            <cbc:Name>Rezervni dijelovi - isporučeni prema otpremnici</cbc:Name>
            <!-- Croatian item classification (mandatory) -->
            <cac:CommodityClassification>
                <cbc:ItemClassificationCode listID="CG">28.11.42</cbc:ItemClassificationCode>
            </cac:CommodityClassification>
            <cac:ClassifiedTaxCategory>
                <cbc:ID>S</cbc:ID>
                <cbc:Percent>25</cbc:Percent>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                    <cbc:Name>HR:PDV25</cbc:Name>
                </cac:TaxScheme>
            </cac:ClassifiedTaxCategory>
        </cac:Item>
        <cac:Price>
            <cbc:PriceAmount currencyID="EUR">30.00</cbc:PriceAmount>
        </cac:Price>
    </cac:InvoiceLine>

    <!-- BG-25 Invoice line with Receipt Advice Reference -->
    <cac:InvoiceLine>
        <cbc:ID>3</cbc:ID>
        <cbc:InvoicedQuantity unitCode="EA">2</cbc:InvoicedQuantity>
        <cbc:LineExtensionAmount currencyID="EUR">200.00</cbc:LineExtensionAmount>
        <!-- Croatian line-level receipt advice reference -->
        <cac:ReceiptLineReference>
            <!-- Line identifier in the receipt advice -->
            <cbc:LineID>RA-LINE-003</cbc:LineID>
            <cac:DocumentReference>
                <!-- Receipt advice number -->
                <cbc:ID>RA-2025-REC-456</cbc:ID>
            </cac:DocumentReference>
        </cac:ReceiptLineReference>
        <cac:Item>
            <cbc:Name>Potrošni materijal - primljen prema prijemnici</cbc:Name>
            <!-- Croatian item classification (mandatory) -->
            <cac:CommodityClassification>
                <cbc:ItemClassificationCode listID="CG">20.30.24</cbc:ItemClassificationCode>
            </cac:CommodityClassification>
            <cac:ClassifiedTaxCategory>
                <cbc:ID>S</cbc:ID>
                <cbc:Percent>25</cbc:Percent>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                    <cbc:Name>HR:PDV25</cbc:Name>
                </cac:TaxScheme>
            </cac:ClassifiedTaxCategory>
        </cac:Item>
        <cac:Price>
            <cbc:PriceAmount currencyID="EUR">100.00</cbc:PriceAmount>
        </cac:Price>
    </cac:InvoiceLine>
</Invoice>
