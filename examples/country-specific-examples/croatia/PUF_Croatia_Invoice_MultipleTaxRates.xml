                    <cbc:ID>VAT</cbc:ID>
                </cac:TaxScheme>
            </cac:TaxCategory>
        </cac:TaxSubtotal>

        <!-- Free export item (HR:G) -->
        <cac:TaxSubtotal>
            <cbc:TaxableAmount currencyID="EUR">1500.00</cbc:TaxableAmount>
            <cbc:TaxAmount currencyID="EUR">0.00</cbc:TaxAmount>
            <cac:TaxCategory>
                <cbc:ID>G</cbc:ID>
                <cbc:Name>HR:G</cbc:Name>
