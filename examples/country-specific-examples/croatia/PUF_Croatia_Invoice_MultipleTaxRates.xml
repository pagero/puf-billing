                <cbc:Name>HR:PDV5</cbc:Name>
                <cbc:Percent>5.00</cbc:Percent>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                </cac:TaxScheme>
            </cac:TaxCategory>
        </cac:TaxSubtotal>

        <!-- Reverse charge (HR:AE) -->
        <cac:TaxSubtotal>
            <cbc:TaxableAmount currencyID="EUR">300.00</cbc:TaxableAmount>
            <cbc:TaxAmount currencyID="EUR">0.00</cbc:TaxAmount>
