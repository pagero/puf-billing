<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Invoice xmlns:cac="urn:pagero:CommonAggregateComponents:1.0" xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2" xmlns:puf="urn:pagero:ExtensionComponent:1.0" xmlns:ext="urn:oasis:names:specification:ubl:schema:xsd:CommonExtensionComponents-2" xmlns="urn:pagero:PageroUniversalFormat:Invoice:1.0">

    <!-- Croatian Corrective Invoice (P10) Example -->
    <!-- This example demonstrates a corrective invoice that cancels/corrects a previous invoice -->

    <cbc:CustomizationID>urn:pagero.com:puf:billing:2.0</cbc:CustomizationID>
    <cbc:ProfileID>urn:pagero.com:puf:billing:1.0</cbc:ProfileID>
    <!-- BT-1 Invoice Number -->
    <cbc:ID>HR-2025-CORR-123</cbc:ID>
    <!-- BT-2 Invoice Issue Date  -->
    <cbc:IssueDate>2025-02-05</cbc:IssueDate>
    <!-- HR-BT-2 Issue time (mandatory in Croatia) -->
    <cbc:IssueTime>11:30:00</cbc:IssueTime>
    <!-- BT-9 Due Date -->
    <cbc:DueDate>2025-03-05</cbc:DueDate>
    <!-- BT-3 Invoice Type Code 384 (Corrected invoice) with Croatian process type P10 -->
    <cbc:InvoiceTypeCode name="P10">384</cbc:InvoiceTypeCode>
    <!-- BT-22 Invoice Note -->
    <cbc:Note>Ispravak fakture HR-2025-00123 zbog pogreške u opisu artikla</cbc:Note>
    <!-- BT-5 Invoice Document Currency (Croatia uses EUR) -->
    <cbc:DocumentCurrencyCode>EUR</cbc:DocumentCurrencyCode>
    <!-- BT-10 Buyer reference -->
    <cbc:BuyerReference>CORR-REF-2025</cbc:BuyerReference>

    <!-- BG-3 Billing Reference - Reference to original invoice (mandatory for P10) -->
    <cac:BillingReference>
        <cac:InvoiceDocumentReference>
            <!-- BT-25 Preceding Invoice Number -->
            <cbc:ID>HR-2025-00123</cbc:ID>
            <!-- BT-26 Preceding Invoice Issue Date (HR-BR-6: mandatory when billing reference is used) -->
            <cbc:IssueDate>2025-01-15</cbc:IssueDate>
            <!-- Croatian-specific: Billing reference description -->
            <cbc:DocumentDescription>Originalna faktura s pogrešnim opisom artikla - ispravak bez utjecaja na porez</cbc:DocumentDescription>
        </cac:InvoiceDocumentReference>
    </cac:BillingReference>

    <!-- BG-4 Seller -->
    <cac:AccountingSupplierParty>
        <cac:Party>
            <!-- BT-34 Seller endpoint ID with Croatian OIB -->
            <cbc:EndpointID schemeID="9934">12345678901</cbc:EndpointID>
            <!-- BT-28 Seller Trading Name -->
            <cac:PartyName>
                <cbc:Name>Trgovina Zagreb d.o.o.</cbc:Name>
            </cac:PartyName>
            <cac:PostalAddress>
                <!--BT-35 Seller address street-->
                <cbc:StreetName>Ilica 10</cbc:StreetName>
                <!-- BT-37 Seller address City -->
                <cbc:CityName>Zagreb</cbc:CityName>
                <!-- BT-38 Seller address postal code -->
                <cbc:PostalZone>10000</cbc:PostalZone>
                <cac:Country>
                    <!-- BT-40 Seller address country code -->
                    <cbc:IdentificationCode>HR</cbc:IdentificationCode>
                </cac:Country>
            </cac:PostalAddress>
            <cac:PartyTaxScheme>
                <!-- BT-31 Seller Vat Number with Croatian HR prefix -->
                <cbc:CompanyID>HR12345678901</cbc:CompanyID>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                </cac:TaxScheme>
            </cac:PartyTaxScheme>
            <cac:PartyLegalEntity>
                <!-- BT-27 Seller Registration Name -->
                <cbc:RegistrationName>Trgovina Zagreb d.o.o.</cbc:RegistrationName>
                <!--BT-33 Company Legal Form-->
                <cbc:CompanyLegalForm>d.o.o. osnovana na Trgovačkom sudu u Osijeku, temeljni kapital 20.000,00 EUR, direktor Ivan Perić</cbc:CompanyLegalForm>
            </cac:PartyLegalEntity>
        </cac:Party>
        <!-- HR-BT-4 and HR-BT-5 Operator information (mandatory for Croatian fiscalization) -->
        <cac:SellerContact>
            <!-- HR-BT-5 Operator OIB -->
            <cbc:ID>11111111111</cbc:ID>
            <!-- HR-BT-4 Operator Name -->
            <cbc:Name>Operater Zagreb</cbc:Name>
        </cac:SellerContact>
    </cac:AccountingSupplierParty>
    <!-- BG-7 Buyer -->
    <cac:AccountingCustomerParty>
        <cbc:SupplierAssignedAccountID>CRO-CUST-001</cbc:SupplierAssignedAccountID>
        <cac:Party>
            <!-- BT-49 Buyer endpoint ID with Croatian OIB -->
            <cbc:EndpointID schemeID="9934">10987654321</cbc:EndpointID>
            <!-- BT-45 Buyer Trading Name -->
            <cac:PartyName>
                <cbc:Name>Kupac Split d.o.o.</cbc:Name>
            </cac:PartyName>
            <cac:PostalAddress>
                <!-- BT-50 Buyer address street-->
                <cbc:StreetName>Riva 12</cbc:StreetName>
                <!-- BT-52 Buyer address City -->
                <cbc:CityName>Split</cbc:CityName>
                <!-- BT-53 Buyer address postal code -->
                <cbc:PostalZone>21000</cbc:PostalZone>
                <cac:Country>
                    <!-- BT-55 Buyer address country code -->
                    <cbc:IdentificationCode>HR</cbc:IdentificationCode>
                </cac:Country>
            </cac:PostalAddress>
            <cac:PartyTaxScheme>
                <!-- BT-48 Buyer Vat Number if applicable -->
                <cbc:CompanyID>HR10987654321</cbc:CompanyID>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                </cac:TaxScheme>
            </cac:PartyTaxScheme>
            <cac:PartyLegalEntity>
                <!-- BT-44 Buyer Name -->
                <cbc:RegistrationName>Kupac Split d.o.o.</cbc:RegistrationName>
            </cac:PartyLegalEntity>
        </cac:Party>
    </cac:AccountingCustomerParty>
    <cac:PaymentMeans>
        <!-- BT-81 Payment means code -->
        <cbc:PaymentMeansCode>30</cbc:PaymentMeansCode>
        <!-- BT-83 Remittance information -->
        <cbc:PaymentID>HR-2025-CORR-123</cbc:PaymentID>
        <cac:PayeeFinancialAccount>
            <!-- BT-84 Financial account identifier -->
            <cbc:ID>HR1724020061100003456</cbc:ID>
            <cac:FinancialInstitutionBranch>
                <!-- BT-86 Payment service provider identifier -->
                <cbc:ID>HPBZHR2X</cbc:ID>
            </cac:FinancialInstitutionBranch>
        </cac:PayeeFinancialAccount>
    </cac:PaymentMeans>
    <!-- BG-23 VAT breakdown -->
    <cac:TaxTotal>
        <!-- BT-110 Invoice total VAT amount -->
        <cbc:TaxAmount currencyID="EUR">25.00</cbc:TaxAmount>
        <cac:TaxSubtotal>
            <cbc:TaxableAmount currencyID="EUR">100.00</cbc:TaxableAmount>
            <cbc:TaxAmount currencyID="EUR">25.00</cbc:TaxAmount>
            <cac:TaxCategory>
                <cbc:ID>S</cbc:ID>
                <!-- HR-BT-12 Croatian tax category label -->
                <cbc:Name>HR:PDV25</cbc:Name>
                <cbc:Percent>25.00</cbc:Percent>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                </cac:TaxScheme>
            </cac:TaxCategory>
        </cac:TaxSubtotal>
    </cac:TaxTotal>
    <!-- BG-22 Document totals -->
    <cac:LegalMonetaryTotal>
        <!-- BT-106 Sum of all Invoice line net amounts -->
        <cbc:LineExtensionAmount currencyID="EUR">100.00</cbc:LineExtensionAmount>
        <!-- BT-109 Invoice total amount without VAT -->
        <cbc:TaxExclusiveAmount currencyID="EUR">100.00</cbc:TaxExclusiveAmount>
        <!-- BT-112 Invoice total amount with VAT -->
        <cbc:TaxInclusiveAmount currencyID="EUR">125.00</cbc:TaxInclusiveAmount>
        <!-- BT-115 Amount due for payment -->
        <cbc:PayableAmount currencyID="EUR">125.00</cbc:PayableAmount>
    </cac:LegalMonetaryTotal>
    <!-- BG-25 Invoice line -->
    <cac:InvoiceLine>
        <cbc:ID>1</cbc:ID>
        <cbc:InvoicedQuantity unitCode="EA">1</cbc:InvoicedQuantity>
        <cbc:LineExtensionAmount currencyID="EUR">100.00</cbc:LineExtensionAmount>
        <cac:Item>
            <!-- Corrected item description -->
            <cbc:Description>Ispravan opis: Laptop računalo HP ProBook 450 G10, Intel Core i5-1335U, 16GB RAM, 512GB SSD, 15.6" FHD</cbc:Description>
            <cbc:Name>Laptop računalo HP ProBook 450 G10 - ISPRAVLJENO</cbc:Name>
            <!-- Croatian item classification (mandatory) -->
            <cac:CommodityClassification>
                <cbc:ItemClassificationCode listID="CG">26.20.11</cbc:ItemClassificationCode>
            </cac:CommodityClassification>
            <cac:ClassifiedTaxCategory>
                <cbc:ID>S</cbc:ID>
                <cbc:Name>HR:PDV25</cbc:Name>
                <cbc:Percent>25</cbc:Percent>
                <cac:TaxScheme>
                    <cbc:ID>VAT</cbc:ID>
                </cac:TaxScheme>
            </cac:ClassifiedTaxCategory>
        </cac:Item>
        <cac:Price>
            <cbc:PriceAmount currencyID="EUR">100.00</cbc:PriceAmount>
        </cac:Price>
    </cac:InvoiceLine>
</Invoice>
