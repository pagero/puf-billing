        <cbc:TaxExclusiveAmount currencyID="EUR">195.00</cbc:TaxExclusiveAmount>
        <!-- BT-112 Invoice total amount with VAT. Currency in attribute currencyID (BT-5) -->
        <cbc:TaxInclusiveAmount currencyID="EUR">220.00</cbc:TaxInclusiveAmount>
        <!-- BT-107 Sum of all allowances on document level. Currency in attribute currencyID (BT-5)-->
        <cbc:AllowanceTotalAmount currencyID="EUR">5.00</cbc:AllowanceTotalAmount>
        <!-- BT-115 Amount due for payment. Currency in attribute currencyID (BT-5) -->
        <cbc:PayableAmount currencyID="EUR">220.00</cbc:PayableAmount>
