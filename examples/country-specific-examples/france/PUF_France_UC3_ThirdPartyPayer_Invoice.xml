                                <cbc:ElectronicMail>paiements@centrale-achat-groupe.fr</cbc:ElectronicMail>
                            </cac:Contact>
                        </cac:Party>
                    </puf:RestrictedInformationParty>
                </puf:PageroExtension>
            </ext:ExtensionContent>
        </ext:UBLExtension>
